[Unit]
Description=Prometheus server service
After=network.target
Wants=network.target

[Service]
EnvironmentFile=-/etc/sysconfig/prometheus
ExecStart=/opt/prometheus/bin/prometheus -config.file=/etc/prometheus/prometheus.yml -storage.local.path=/opt/prometheus/data -web.console.templates=/opt/prometheus/releases/current/consoles  -web.console.libraries=/opt/prometheus/releases/current/console_libraries $PROMETHEUS_OPTS
Restart=always
RestartSec=20
TimeoutSec=300
StandardOutput=journal
StandardError=journal
User=prometheus
Group=prometheus
ProtectSystem=full
CapabilityBoundingSet=~CAP_SYS_ADMIN
ProtectHome=yes
PrivateTmp=yes
ReadOnlyPaths=/
ReadWritePaths=/opt/prometheus/data
NoNewPrivileges=yes
CPUAccounting=yes
MemoryAccounting=yes
IOAccounting=yes
TasksAccounting=yes

[Install]
WantedBy=multi-user.target
