global:
  scrape_interval:     15s
  evaluation_interval: 15s # By default, scrape targets every 15 seconds.
  # scrape_timeout is set to the global default (10s).

  # The labels to add to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: 'master'

rule_files:
  - '/etc/prometheus/rules/*.json'
  - '/etc/prometheus/rules/*.yml'
  - '/etc/prometheus/rules/*.yaml'

# A list of scrape configurations.
scrape_configs:

  - job_name: 'prometheus'
    scrape_interval: 10s
    scrape_timeout:  10s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: "node"
    consul_sd_configs:
    {% for consul_node in groups['consul_server'] %}

      - server: "{{ consul_node }}:8500"
        services:
          - "node-exporter"

    {% endfor %}

    file_sd_configs:
      - files:
        - '/etc/prometheus/sd/node_exporter_*.json'
        - '/etc/prometheus/sd/node_exporter_*.yml'
        - '/etc/prometheus/sd/node_exporter_*.yaml'

  - job_name: etcd-peer
    consul_sd_configs:
    {% for consul_node in groups['consul_server'] %}

      - server: "{{ consul_node }}:8500"
        services:
          - "etcd-peer"

    {% endfor %}

    file_sd_configs:
      - files:
        - '/etc/prometheus/sd/etcd_peer_*.json'
        - '/etc/prometheus/sd/etcd_peer_*.yml'
        - '/etc/prometheus/sd/etcd_peer_*.yaml'

  - job_name: "haproxy"
    consul_sd_configs:
    {% for consul_node in groups['consul_server'] %}

      - server: "{{ consul_node }}:8500"
        services:
          - "haproxy-exporter"

    {% endfor %}

    file_sd_configs:
      - files:
        - '/etc/prometheus/sd/haproxy_exporter_*.json'
        - '/etc/prometheus/sd/haproxy_exporter_*.yml'
        - '/etc/prometheus/sd/haproxy_exporter_*.yaml'
